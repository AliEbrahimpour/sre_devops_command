#============================= Journalbeat inputs =============================

journalbeat.inputs:
- paths: []
  seek: cursor
setup.template.settings:
  index.number_of_shards: 1
# ================================= Processors =================================

# Configure processors to enhance or manipulate events generated by the beat.

processors:
  - add_host_metadata: ~
  - add_cloud_metadata: ~
  - add_docker_metadata: ~
# ------------------------------ Logstash Output -------------------------------
output.logstash:
  hosts: {{ controller }}
# ================================== Logging ===================================
logging.level: {{ logging_level }}
logging.to_syslog: {{ logging_to_syslog }}
